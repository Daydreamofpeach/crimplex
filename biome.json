{
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"lineEnding": "lf"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noShadowRestrictedNames": "off"
			},
			"a11y": {
				"useKeyWithMouseEvents": "off"
			}
		}
	},
	"files": {
		"ignore": ["./.next/**"]
	}
}
